{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": false,
    "sourceMap": true,
    "emitDeclarationOnly": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["declaration.d.ts","src/**/*"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
